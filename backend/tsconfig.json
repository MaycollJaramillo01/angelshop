{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "../node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
